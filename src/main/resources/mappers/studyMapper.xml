<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.sbang.mapper.StudyMapper">

	<insert id="create">
		insert into study(study_name,study_category,study_region,study_maxMemberCount) values
		(#{studyName},#{studyCategory},#{studyRegion},#{studyMaxMemberCount})
	</insert>

	<select id="read" resultType="StudyVO">
		select
		*
		from
		study
		where
		study_id=#{studyId}
	</select>


	<update id="update">
		update study set
		study_name=#{studyName}, study_category=#{studyCategory}
		where study_id=#{studyId}
	</update>

	<delete id="delete">
		delete from study where study_id=#{studyId}
	</delete>

	<select id="listAll" resultType="StudyVO">
  		<![CDATA[
  		select
  		*
  		from
  		study
  		where study_id>0
  		order by study_id desc,study_registerDate desc
  		]]>
	</select>
</mapper>

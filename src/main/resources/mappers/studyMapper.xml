<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.sbang.mapper.StudyMapper">

	<!-- 스터디방 CRUD -->
	<insert id="create">
		insert into
		study(studyName,studyUpCategory,studyCategory,studyRegion,studyTargetAge,studyMaxMemCnt,studyCurMemCnt,studyMemFee,studyWorkPerMonth,studyIntroduce,studyStartDate,studyEndDate)
		values
		(#{studyName},#{studyUpCategory},#{studyCategory},#{studyRegion},#{studyTargetAge},#{studyMaxMemCnt},#{studyCurMemCnt},#{studyMemFee},#{studyWorkPerMonth},#{studyIntroduce},#{studyStartDate},#{studyEndDate})
	</insert>

	<select id="read" resultType="StudyVO">
		select * from study where studyNo=#{studyNo}
	</select>

	<update id="update">
		update study set
		studyName=#{studyName},studyCategory=#{studyCategory},studyRegion=#{studyRegion},studyTargetAge=#{studyTargetAge},studyMaxMemCnt=#{studyMaxMemCnt},
		studyCurMemCnt=#{studyCurMemCnt},studyMemFee=#{studyMemFee},studyWorkPerMonth=#{studyWorkPerMonth},studyIntroduce=#{studyIntroduce},studyStartDate=#{studyStartDate},studyEndDate=#{studyEndDate},studyUpdateDate=now()
		where studyNo=#{studyNo}
	</update>

	<delete id="delete">
		delete from study where studyNo=#{studyNo}
	</delete>

	<select id="listAll" resultType="StudyVO">
  		<![CDATA[
  		select * from study where studyNo>0 order by studyNo desc,studyRegDate desc LIMIT 9
  		]]>
	</select>
	
	<!-- 이미지검색 CRUD -->
	<insert id="addImg">
		insert into image(imagePath,studyNo) values(#{imagePath},LAST_INSERT_ID())
	</insert>

	<delete id="deleteImg">
		delete from image where studyNo=#{studyNo}
	</delete>

	<select id="getImg" resultType="string">
		select imagePath from image where studyNo=#{studyNo}
	</select>

	<insert id="replaceImg">
		insert into image(imagePath,studyNo) values (#{imagePath},#{studyNo})
	</insert>

	<select id="countPaging" resultType="int">
  	<![CDATA[
	  	select count(studyNo) from study where studyNo>0
  	]]>
	</select>

	<!-- 서치 -->
	<select id="listSearch" resultType="StudyVO">
  	<![CDATA[
	  	select s.studyNo, s.studyName, s.studyRegDate, s.studyViewCnt, s.studyReplyCnt, i.imagePath 
	  	from study s left outer join (select imagePath, studyNo from image group by studyNo) i 
	  	on i.studyNo =s.studyNo where s.studyNo>0
  	]]>
		<include refid="upCategory"></include>
		<include refid="region"></include>
		<include refid="search"></include>
  	<![CDATA[
	  	order by 
	  	]]>
		<include refid="line"></include>
	  <![CDATA[	
	  	s.studyNo desc, s.studyRegDate limit #{pageStart},#{perPageNum}
  	]]>
	</select>

	<select id="listSearchCount" resultType="int">
  	<![CDATA[
	  	select count(s.studyNo) from study s where s.studyNo>0 
  	]]>
		<include refid="upCategory"></include>
		<include refid="region"></include>
		<include refid="search"></include>

	</select>

	<update id="updateReplyCnt">
		update study set studyReplyCnt=studyReplyCnt+#{amount} where studyNo=#{studyNo}
	</update>

	<update id="updateViewCnt">
		update study set studyViewCnt=studyViewCnt+1 where studyNo=#{studyNo}
	</update>
	
	<!--카테고리 sql 모듈 -->
	<sql id="upCategory">
		<if test="upCategory !=null">
			<if test="upCategory == '0'.toString()">
				and s.studyUpCategory like CONCAT('%','영어', '%')
			</if>
			<if test="upCategory == '1'.toString()">
				and s.studyUpCategory like CONCAT('%','외국어', '%')
			</if>
			<if test="upCategory == '2'.toString()">
				and s.studyUpCategory like CONCAT('%','컴퓨터', '%')
			</if>
			<if test="upCategory == '3'.toString()">
				and s.studyUpCategory like CONCAT('%','디자인/미술', '%')
			</if>
			<if test="upCategory == '4'.toString()">
				and s.studyUpCategory like CONCAT('%','국가고시/공무원', '%')
			</if>
			<if test="upCategory == '5'.toString()">
				and s.studyUpCategory like CONCAT('%','취업', '%')
			</if>
			<if test="upCategory == '6'.toString()">
				and s.studyUpCategory like CONCAT('%','음악/공연', '%')
			</if>
			<if test="upCategory == '7'.toString()">
				and s.studyUpCategory like CONCAT('%','스포츠', '%')
			</if>
			<if test="upCategory == '8'.toString()">
				and s.studyUpCategory like CONCAT('%','뷰티/미용', '%')
			</if>
			<if test="upCategory == '9'.toString()">
				and s.studyUpCategory like CONCAT('%','라이프스타일', '%')
			</if>
			<if test="upCategory == '10'.toString()">
				and s.studyUpCategory like CONCAT('%','게임', '%')
			</if>
		</if>
	</sql>

	<!--지역 검색 sql 모듈 -->
	<sql id="region">
		<if test="region != null">
			and s.studyRegion like CONCAT('%', #{region}, '%')
		</if>
	</sql>

	<!--정렬 sql 모듈 -->
	<sql id="line">
		<if test="lineUp !=null">
			<if test="lineUp == 'v'.toString()">
				s.studyViewCnt desc,
			</if>
			<if test="lineUp == 'p'.toString()">
				s.studyMemFee desc,
			</if>
			<if test="lineUp == 'r'.toString()">
				s.studyReplyCnt desc,
			</if>
		</if>
	</sql>
	
	<!--검색 sql 모듈 -->
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 't'.toString()">
				and s.studyName like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'c'.toString()">
				and s.studyIntroduce like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'w'.toString()">
				and writer like CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'tc'.toString()">
				and ( s.studyName like CONCAT('%', #{keyword}, '%') OR s.studyIntroduce like CONCAT('%', #{keyword},
				'%'))
			</if>
			<if test="searchType == 'cw'.toString()">
				and ( s.studyIntroduce like CONCAT('%', #{keyword}, '%') OR writer like CONCAT('%', #{keyword}, '%'))
			</if>
			<if test="searchType == 'tcw'.toString()">
				and ( s.studyName like CONCAT('%', #{keyword}, '%') OR s.studyIntroduce like CONCAT('%', #{keyword}, '%')
				OR writer like CONCAT('%', #{keyword}, '%'))
			</if>
		</if>
	</sql>
</mapper>
 

